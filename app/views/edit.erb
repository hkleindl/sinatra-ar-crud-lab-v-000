<form action="/posts/<%= @post.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <h1><%= @post.name %></h1><br>
  <p><%= @post.content %></p>
  <p>Name: <input id="name" type="text" name="post[name]"></p>
  <p>Content: <input id="content" type="text" name="post[content]"></p>
  <input type="submit" value="submit">
</form>
